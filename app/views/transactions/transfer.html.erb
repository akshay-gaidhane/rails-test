<div class="col-12 col-md-8 p-3">
  <div class="container"style="margin-top: 5%;">
  	<h1>Transfer money</h1>
    <% if @errors.present? %>
		<ul>
		  <% @errors.each do |msg| %>
		    <li><%= msg %></li>
		  <% end %>
		</ul>
		<% end %>
		<%= form_for (@transaction), url: account_transactions_path(@account.id), :html => {:class => "form-horizontal center"} do |f| %>
	    <div class="form-group">
	      <%= f.label :transaction_type, "Transaction type:", class: "col-md-4 control-label" %>
	      <div class="col-md-8">
	        <%= f.select :transaction_type, [['Transfer', 'transfer'] ], class: "form-control" %>
	      </div>
	    </div>
	    <div class="form-group">
	      <%= f.label :recipient_account_number, "Recipient Account Number:", class: "col-md-4 control-label" %>
	      <div class="col-md-8">
	        <%= f.text_field :recipient_account_number, id: "searchAccount", class: "form-control" %>
	      </div>
	    </div>
	    <div class="form-group">
	      <%= f.label :amount, "Amount:", class: "col-md-4 control-label" %>
	      <div class="col-md-8">
	        <%= f.number_field :amount, class: "form-control" %>
	      </div>
	    </div>
	    <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
		<% end %>
  </div>
</div>